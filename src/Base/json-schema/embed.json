{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "definitions": {
    "embed": {
      "properties": {
        "title": {
          "type": "string",
          "description": "Usable replacers: \"{TITLE}\""
        },
        "url": {
          "type": "string",
          "description": "Usable replacers: \"{TITLE_URL}\""
        },
        "author": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Usable replacers: \"{AUTHOR_NAME}\""
            },
            "iconURL": {
              "type": "string",
              "description": "Usable replacers: \"{AUTHOR_URL}\""
